<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="4"
        android:background="@drawable/settingalarmbackground"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠금 강도"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:textSize="50dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center">

            <ImageView
                android:id="@+id/locklevel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/locklevel1off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center">

            <ImageView
                android:id="@+id/locklevel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/locklevel2off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center">

            <ImageView
                android:id="@+id/locklevel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/locklevel3off" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
